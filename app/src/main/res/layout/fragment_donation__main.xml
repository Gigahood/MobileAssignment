<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Donation_Module.Donation_Main">

    <ImageView
        android:id="@+id/imageFunding"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginStart="32dp"
        android:clickable="true"
        android:src="@drawable/donate_fund"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageLocation"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.384" />

    <ImageView
        android:id="@+id/imageLocation"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/donate_location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageFunding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.384" />

    <TextView
        android:id="@+id/textFund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/fund"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/imageFunding"
        app:layout_constraintStart_toStartOf="@+id/imageFunding"
        app:layout_constraintTop_toBottomOf="@+id/imageFunding" />

    <TextView
        android:id="@+id/textLocation"
        android:layout_width="180dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:text="@string/donate_venue"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/imageLocation"
        app:layout_constraintStart_toStartOf="@+id/imageLocation"
        app:layout_constraintTop_toBottomOf="@+id/imageLocation" />
</androidx.constraintlayout.widget.ConstraintLayout>