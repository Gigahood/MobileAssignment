<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView

        android:id="@+id/totalView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:theme="@style/AppTheme2"
        tools:context=".Login_Registration.Registration">

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="720dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/bg">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="335dp"
            android:layout_height="645dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="-680dp"
            android:background="@drawable/layout_design"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register"
                android:textColor="@color/colorDark"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="10dp"
                android:textSize="20dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editRegisterEmailLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="20dp"
            app:endIconMode="clear_text"
            app:helperText="Please Enter Your Email"
            app:helperTextEnabled="true"
            android:padding="-11dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editRegisterEmail"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableLeft="@drawable/ic_envelope"
                android:ems="10"
                android:hint="Email : "
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editDisplayNameLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="10dp"
            app:helperText="Please Enter Your Display Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editDisplayName"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                android:ems="10"
                android:hint="Display Name : "
                android:inputType="textPersonName" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editPasswordLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="10dp"
            app:endIconCheckable="true"
            app:endIconMode="password_toggle"
            app:helperText="Please Enter Your Password">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:ems="10"
                android:hint="Password : "
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editAddressLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="10dp"
            app:endIconMode="clear_text"
            app:helperText="Please Enter Your Address"
            app:helperTextEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_noun_address_2340040"
                android:ems="10"
                android:hint="Address : "
                android:inputType="textPostalAddress" />
        </com.google.android.material.textfield.TextInputLayout>




        <!--        <Button-->
        <!--            android:id="@+id/btnRegistration"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginTop="40dp"-->
        <!--            android:background="@drawable/custom_button"-->
        <!--            android:text="Register" />-->

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Your Role:"
                android:textColor="@color/colorDark"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:checkedButton="@id/mentee"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/mentee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Mentee" />

                <RadioButton
                    android:id="@+id/mentor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Mentor" />
            </RadioGroup>


            <Button
            android:id="@+id/btnRegistration"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_colour"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:theme="@style/AppTheme3"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Already have an account? "
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorPrimary"/>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="-34dp"
                android:text="Login Here"
                android:textColor="@color/colorAccent"
                style="?android:attr/borderlessButtonStyle" />




        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</layout>
