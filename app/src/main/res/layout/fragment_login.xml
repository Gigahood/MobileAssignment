<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Login_Registration.Login">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editEmailLayout"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:ems="10"
            android:inputType="textEmailAddress"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editRegisterEmail"
                android:hint="Email : "
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editPasswordLayout"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:ems="10"
            android:inputType="textPassword"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPassword"
                android:hint="Password : "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_button"
            android:outlineAmbientShadowColor="#00E41B1B"
            android:outlineSpotShadowColor="#00F33E3E"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:cornerRadius="30dp"
            app:strokeColor="#00EC0A0A" />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="50dp"
            android:background="#FFFFFF"
            android:text="Reset Password"
            android:textColor="@color/design_default_color_primary" />

        <View style="@style/Divider.Horizontal"/>
        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Registration"
            android:background="@drawable/custom_button"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnRegistration"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Sign Up"
            android:background="@drawable/button_design"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:drawableStart="@drawable/ic_launcher_sign_up"/>


    </LinearLayout>
</layout>
